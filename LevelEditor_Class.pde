  //this method copies the current level onto a new array. it then reads the new array in the level editor
  void createLevel(int[][]lvl) {
    for (int i = 0; i < 17; i++) { // i is down
      for (int j = 0; j < 32; j++) { //j is across
        if (lvl[i][j] % 2 == 1 && lvl[i][j] != 99) wall.add(new Wall(j*40, i*40, lvl[i][j])); //add wall
        else if (lvl[i][j] == 2) brWall.add(new BreakableWall(j*40, i*40, lvl[i][j])); // add destructable wall
        else if (lvl[i][j] == 99) tp.add(new Teleporter(j*40, i*40)); // add teleporter
      }
    }
  }
